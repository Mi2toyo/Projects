--// Hi, what are you doing here
--[[
getgenv().Prefix_Settings = {
    ['Spot'] = '', --[ Left / Right ]
    ['Prefix'] = '' --// Your prefix (This goes with the spot)
}
getgenv().Commands = {
    ['Lock'] = '', --// Use this command to target someone
    ['Unlock'] = '' --// Use this command to untarget
}
]]

repeat
    task.wait()
until game:IsLoaded()

local function getBackpack()
    return game:FindService'Players'.localPlayer:FindFirstChildWhichIsA'Backpack'
end
local target
getBackpack().Parent.Chatted:connect(function(arg)
    local split = arg:lower():split' '
    local function addCmd(cmd, func)
        local psettings = getgenv()['Prefix Settings']
        if psettings.Spot:lower() == 'right' then
            if split[1] == cmd:lower()..psettings.Prefix:lower() then
                func()
            end
        elseif psettings.Spot:lower() == 'left' then
            if split[1] == psettings.Prefix:lower()..cmd:lower() then
                func()
            end
        end
    end
    addCmd(Commands.Unlock, function()
        if target then
            target = nil
        end
    end)
    for _, p in pairs(getBackpack().Parent.Parent:GetPlayers())
        addCmd(Commands.Lock, function()
            if p.Name:lower():find(split[2]) or p.DisplayName:lower():find(Split[2]) then
                target = p
            end
        end)
    end
end)
local function exec()
    getBackpack():WaitForChild'[Crossbow]'
    getBackpack()['[Crossbow]'].Activated:connect(function()
        if target then
            workspace:WaitForChild'Arrow'
            pcall(function()
                firetouchinterest(workspace.Arrow, target.Character.HumanoidRootPart, 0)
            end)
        end
    end)
end
exec()
localPlayer.CharacterAdded:connect(function(user)
    user:WaitForChild'FULLY_LOADED_CHAR'
    exec()
end)
